{
  "name": "yabai",
  "description": "Yet Another BoostNote Application Implementation",
  "private": true,
  "workspaces": [
    "packages/yabai",
    "packages/blessed",
    "packages/@types/blessed"
  ],
  "scripts": {
    "prepare-dist": "node ./scripts/prepare-dist.js",
    "lint": "run-p lint:*",
    "lint:yabai": "eslint -c .eslintrc.js packages/yabai/**/*.ts",
    "boot": "cd packages/yabai; yarn boot",
    "run-app": "cd packages/yabai; yarn run:app",
    "ut": "cd packages/yabai; yarn test"
  },
  "importSort": {
    ".js, .ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "import-sort-style-module": "^6.0.0",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-plugin-import-sort": "^0.0.3",
    "typescript": "3.7.5"
  }
}
